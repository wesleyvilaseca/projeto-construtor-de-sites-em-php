{% if modules == true %}
	<div class="info-body-table">
		<div class="table-responsive">
			<table class="table table-striped">
				<thead class="thead-dark">
					<tr>
						<th scope="col">Descrição</th>
						<th scope="col">Situação</th>
						<th scope="col">Ação</th>
					</tr>
				</thead>
				<tbody>
					{% for module in modules %}
						<tr>
							<td>{{module.description}}</td>
							<td>{{module.enable == 'S' ? 'Ativo' : 'Inativo' }}</td>
							<td>
								<a class="btn btn-info btn-sm" href="{{editroute}}{{module.id}}">
									<i class="fas fa-pencil-alt"></i>
								</a>
								<a class="btn btn-danger btn-sm" href="{{deleteroute}}{{module.id}}">
									<i class="far fa-trash-alt"></i>
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% else %}
	<h5 align="center">
		Não há registros
	</h5>
{% endif %}
